{
    "manifest_version": 3,
    "name": "Image Converter",
    "version": "1.0",
    "description": "Convert and save images as WebP, PNG, or JPEG via right-click.",
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  